<script>
//  IMPORTAR FUNCIONES DE AUTH

import { loginConEmail, loginConGoogle, cerrarSesion, verificarUsuario } from '../app/auth.js';

//  MEN√ö M√ìVIL

const menuToggle = document.getElementById('menuToggle');
const mobileMenu = document.getElementById('mobileMenu');
const mobileMenuOverlay = document.getElementById('mobileMenuOverlay');

// Abrir/cerrar men√∫ m√≥vil
menuToggle?.addEventListener('click', () => {
  const isHidden = mobileMenu?.classList.contains('hidden');
  
  if (isHidden) {
    mobileMenu?.classList.remove('hidden');
    mobileMenuOverlay?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  } else {
    mobileMenu?.classList.add('hidden');
    mobileMenuOverlay?.classList.add('hidden');
    document.body.style.overflow = 'auto';
  }
});

// Cerrar men√∫ al hacer clic en el overlay
mobileMenuOverlay?.addEventListener('click', () => {
  mobileMenu?.classList.add('hidden');
  mobileMenuOverlay?.classList.add('hidden');
  document.body.style.overflow = 'auto';
});

// Cerrar men√∫ al hacer clic en un enlace
const mobileLinks = mobileMenu?.querySelectorAll('a');
mobileLinks?.forEach(link => {
  link.addEventListener('click', () => {
    mobileMenu?.classList.add('hidden');
    mobileMenuOverlay?.classList.add('hidden');
    document.body.style.overflow = 'auto';
  });
});

//  MODAL DE LOGIN

const loginModal = document.getElementById('loginModal');
const loginBtn = document.getElementById('loginBtn');
const loginBtnMobile = document.getElementById('loginBtnMobile');
const logoutBtn = document.getElementById('logoutBtn');
const logoutBtnMobile = document.getElementById('logoutBtnMobile');
const closeModal = document.getElementById('closeModal');

// Abrir modal (desktop)
loginBtn?.addEventListener('click', () => {
  loginModal?.classList.remove('hidden');
  document.body.style.overflow = 'hidden';
});

// Abrir modal (m√≥vil)
loginBtnMobile?.addEventListener('click', () => {
  loginModal?.classList.remove('hidden');
  mobileMenu?.classList.add('hidden');
  mobileMenuOverlay?.classList.add('hidden');
  document.body.style.overflow = 'hidden';
});

// Cerrar modal con X
closeModal?.addEventListener('click', () => {
  loginModal?.classList.add('hidden');
  document.body.style.overflow = 'auto';
});

// Cerrar modal al hacer clic fuera
loginModal?.addEventListener('click', (e) => {
  if (e.target === loginModal) {
    loginModal.classList.add('hidden');
    document.body.style.overflow = 'auto';
  }
});


//  LOGIN CON EMAIL Y PASSWORD

const loginForm = document.getElementById('loginForm');
const emailInput = document.getElementById('email');
const passwordInput = document.getElementById('password');

loginForm?.addEventListener('submit', async (e) => {
  e.preventDefault();
  
  const email = emailInput?.value || '';
  const password = passwordInput?.value || '';
  
  if (!email || !password) {
    mostrarAlerta('‚ö†Ô∏è Por favor completa todos los campos', 'warning');
    return;
  }
  
  console.log('üîê Intentando login con email...');
  
  const resultado = await loginConEmail(email, password);
  
  if (resultado.success) {
    console.log('‚úÖ Login exitoso:', resultado.user);
    mostrarAlerta(resultado.message || '¬°Bienvenido!', 'success');
    
    // Cerrar modal
    loginModal?.classList.add('hidden');
    document.body.style.overflow = 'auto';
    
    // Limpiar formulario
    if (emailInput) emailInput.value = '';
    if (passwordInput) passwordInput.value = '';
  } else {
    console.error('‚ùå Error en login:', resultado.error);
    mostrarAlerta(resultado.error || 'Error al iniciar sesi√≥n', 'error');
  }
});


//  LOGIN CON GOOGLE

const googleBtn = document.getElementById('googleBtn');

googleBtn?.addEventListener('click', async () => {
  console.log('üîê Intentando login con Google...');
  
  const resultado = await loginConGoogle();
  
  if (resultado.success) {
    console.log('‚úÖ Login exitoso con Google:', resultado.user);
    mostrarAlerta(resultado.message || '¬°Bienvenido!', 'success');
    
    // Cerrar modal
    loginModal?.classList.add('hidden');
    document.body.style.overflow = 'auto';
  } else {
    console.error('‚ùå Error en login con Google:', resultado.error);
    
    // No mostrar alerta si el usuario cerr√≥ el popup
    if (resultado.errorCode !== 'auth/popup-closed-by-user' && 
        resultado.errorCode !== 'auth/cancelled-popup-request') {
      mostrarAlerta(resultado.error || 'Error al iniciar sesi√≥n', 'error');
    }
  }
});


//  CERRAR SESI√ìN (LOGOUT)

logoutBtn?.addEventListener('click', async () => {
  console.log('üö™ Cerrando sesi√≥n...');
  
  const resultado = await cerrarSesion();
  
  if (resultado.success) {
    console.log('‚úÖ Sesi√≥n cerrada');
    mostrarAlerta(resultado.message || 'Sesi√≥n cerrada', 'success');
  } else {
    console.error('‚ùå Error al cerrar sesi√≥n:', resultado.error);
    mostrarAlerta(resultado.error || 'Error al cerrar sesi√≥n', 'error');
  }
});

logoutBtnMobile?.addEventListener('click', async () => {
  console.log('üö™ Cerrando sesi√≥n (m√≥vil)...');
  
  const resultado = await cerrarSesion();
  
  if (resultado.success) {
    console.log('‚úÖ Sesi√≥n cerrada');
    mostrarAlerta(resultado.message || 'Sesi√≥n cerrada', 'success');
    
    // Cerrar men√∫ m√≥vil
    mobileMenu?.classList.add('hidden');
    mobileMenuOverlay?.classList.add('hidden');
    document.body.style.overflow = 'auto';
  } else {
    console.error('‚ùå Error al cerrar sesi√≥n:', resultado.error);
    mostrarAlerta(resultado.error || 'Error al cerrar sesi√≥n', 'error');
  }
});

// üë§ DETECTAR USUARIO LOGUEADO

// Este observer se ejecuta autom√°ticamente cuando hay cambios en la autenticaci√≥n
verificarUsuario((authState) => {
  if (authState.isAuthenticated && authState.user) {
    // Usuario LOGUEADO
    const user = authState.user;
    console.log('üë§ Usuario detectado:', user.displayName);
    
    // Mostrar botones de logout
    loginBtn?.classList.add('hidden');
    loginBtnMobile?.classList.add('hidden');
    logoutBtn?.classList.remove('hidden');
    logoutBtnMobile?.classList.remove('hidden');
    
    // Mantener el texto "Cerrar Sesi√≥n"
if (logoutBtn) {
  logoutBtn.textContent = 'Cerrar Sesi√≥n';
}
if (logoutBtnMobile) {
  logoutBtnMobile.textContent = 'Cerrar Sesi√≥n';
}
    
    // Disparar evento personalizado para que otras p√°ginas sepan que hay usuario
    window.dispatchEvent(new CustomEvent('userAuthChanged', { 
      detail: authState 
    }));
    
  } else {
    // Usuario NO LOGUEADO
    console.log('üîì No hay usuario autenticado');
    
    // Mostrar botones de login
    loginBtn?.classList.remove('hidden');
    loginBtnMobile?.classList.remove('hidden');
    logoutBtn?.classList.add('hidden');
    logoutBtnMobile?.classList.add('hidden');
    
    // Disparar evento personalizado
    window.dispatchEvent(new CustomEvent('userAuthChanged', { 
      detail: authState 
    }));
  }
});

//  SISTEMA DE ALERTAS

function mostrarAlerta(mensaje, tipo = 'info') {
  // Crear elemento de alerta
  const alerta = document.createElement('div');
  alerta.className = 'fixed top-4 right-4 z-[200] px-6 py-4 rounded-lg shadow-2xl animate-slide-in max-w-sm';
  
  // Colores seg√∫n tipo
  switch (tipo) {
    case 'success':
      alerta.classList.add('bg-green-600', 'text-white');
      break;
    case 'error':
      alerta.classList.add('bg-red-600', 'text-white');
      break;
    case 'warning':
      alerta.classList.add('bg-orange-600', 'text-white');
      break;
    default:
      alerta.classList.add('bg-blue-600', 'text-white');
  }
  
  alerta.innerHTML = `
    <div class="flex items-center space-x-3">
      <span class="text-lg">${tipo === 'success' ? '‚úÖ' : tipo === 'error' ? '‚ùå' : '‚ö†Ô∏è'}</span>
      <p class="text-sm font-medium">${mensaje}</p>
    </div>
  `;
  
  document.body.appendChild(alerta);
  
  // Auto-remover despu√©s de 4 segundos
  setTimeout(() => {
    alerta.classList.add('animate-slide-out');
    setTimeout(() => alerta.remove(), 300);
  }, 4000);
}

// Estilos para animaciones de alerta
const style = document.createElement('style');
style.textContent = `
  @keyframes slide-in {
    from {
      transform: translateX(400px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }
  
  @keyframes slide-out {
    from {
      transform: translateX(0);
      opacity: 1;
    }
    to {
      transform: translateX(400px);
      opacity: 0;
    }
  }
  
  .animate-slide-in {
    animation: slide-in 0.3s ease-out;
  }
  
  .animate-slide-out {
    animation: slide-out 0.3s ease-in;
  }
`;
document.head.appendChild(style);
</script>